{
  "name": "veterinaria-backend",
  "version": "1.0.0",
  "description": "Backend del proyecto veterinaria",
  "type": "module",
  "main": "server.ts",
  "scripts": {
    "build": "npm run prisma:generate && tsc",
    "watch": "tsc -w",
    "start": "node dist/server.js",
    "dev": "npm run prisma:generate && ts-node-dev --respawn --transpile-only server.ts",
    "prisma:generate": "cd .. && prisma generate",
    "prisma:migrate": "cd .. && prisma migrate dev",
    "prisma:studio": "cd .. && prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcrypt": "^6.0.0",
    "connect-pg-simple": "^9.0.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "nodemailer": "^7.0.10",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/express-session": "^1.18.2",
    "@types/node": "^24.10.0",
    "@types/nodemailer": "^7.0.3",
    "prisma": "^6.18.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}

