{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "typeRoots": ["./Backend/types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "Backend/types/*"]
    }
  },
  "include": ["Backend/**/*.ts", "Backend/types/**/*.d.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
