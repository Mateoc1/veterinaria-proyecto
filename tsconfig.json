{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "Backend",
    "outDir": "dist",
    "typeRoots": ["./Backend/types", "./node_modules/@types"]
  },
  "include": ["Backend/**/*.ts", "Backend/types/**/*.d.ts", "src"],
  "exclude": ["node_modules", "dist"]
}
