<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Login</title>
  <link rel="stylesheet" href="/styles/loginStyles.css">
</head>
<body>

  <h2>Login</h2>

  <div class="login-container">
    <form id="loginForm">

      <label>Email:</label>
      <input type="email" id="email" required><br>

      <label>Contrasena:</label>
      <input type="password" id="password" required><br>

      <button type="submit" class="login-btn">Ingresar</button>
    </form>

    <button id="forgotBtn" class="forgot-btn">Recuperar contrase√±a</button>

    <!-- üîµ BOT√ìN NUEVO -->
    <button id="goRegister" class="register-btn">Crear cuenta</button>

    <% if (error) { %>
      <p id="msg" style="color: red;"><%= error %></p>
    <% } else { %>
      <p id="msg"></p>
    <% } %>
  </div>

  <script>
    const API = "http://localhost:3001";

    // LOGIN
    document.getElementById("loginForm").addEventListener("submit", async (e)=>{
      e.preventDefault();
      const email = document.getElementById("email").value.trim();
      const password = document.getElementById("password").value;

      const res = await fetch(API + "/api/login", {
        method: "POST",
        headers: {"Content-Type":"application/json"},
        credentials: "include",
        body: JSON.stringify({email, password})
      });
      const data = await res.json();

      if(data.ok){
        // Redirigir seg√∫n el rol que viene en la respuesta
        if (data.redirect) {
          window.location.href = data.redirect;
        } else {
          // Fallback: redirigir seg√∫n el rol del usuario
          const role = data.user?.role || "user";
          if (role === "admin") {
            window.location.href = "/admin";
          } else if (role === "doctor" || role === "veterinario") {
            window.location.href = "/doc";
          } else {
            window.location.href = "/"; // usuario normal
          }
        }
      } else {
        document.getElementById("msg").textContent = data.error || "Credenciales invalidas";
        document.getElementById("msg").style.color = "red";
      }
    });

    // RECUPERAR CONTRASE√ëA
    document.getElementById("forgotBtn").addEventListener("click", async ()=>{
      const email = document.getElementById("email").value.trim();
      if(!email){alert("Ingresa un email primero"); return;}

      const res = await fetch(API + "/api/forgot-password", {
        method: "POST",
        headers: {"Content-Type":"application/json"},
        body: JSON.stringify({email})
      });

      await res.json();
      alert("Si existe una cuenta con ese email, se envio el link de recuperacion.");
    });

    // üîµ IR A REGISTRO
    document.getElementById("goRegister").addEventListener("click", ()=>{
      window.location.href = "/register";
    });
  </script>

</body>
</html>

